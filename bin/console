#!/usr/bin/env ruby

require 'pigpio' if Gem.platforms.last.os == 'linux' && File.read('/proc/cpuinfo') =~ /Raspberry Pi/
require 'bundler/setup'
require 'lil_blaster'

require 'pry'

example = [
  4511, 4540,
  517, 1732,
  517, 1732,
  517, 1732,
  517, 609,
  517, 609,
  517, 609,
  517, 609,
  517, 609,
  517, 1732,
  517, 1732,
  517, 1732,
  517, 609,
  517, 609,
  517, 609,
  517, 609,
  517, 609,
  517, 609,
  517, 1732,
  517, 609,
  517, 609,
  517, 609,
  517, 609,
  517, 609,
  517, 609,
  517, 1732,
  517, 609,
  517, 1732,
  517, 1732,
  517, 1732,
  517, 1732,
  517, 1732,
  517, 1732,
  517, 47_312
].freeze

@transmission = LilBlaster::Transmission.new(data: example)
@manchester, @power_command = LilBlaster::Protocol.identify!(@transmission)

if Dir.exist?('tmp')
  @codex = Dir.entries('tmp')
              .select { |x| x =~ /_codex.ya?ml/i }
              .map { |y| "tmp/#{y}" }
              .map { |y| LilBlaster::Codex.new(path: y) }
              .first
end

Pry.start
